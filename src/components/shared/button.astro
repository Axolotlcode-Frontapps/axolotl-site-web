---
interface Props {
  text: string;
  type: 'primary' | 'secondary';
  outline?: boolean;
  href: string;
}

const { text, type, outline, href } = Astro.props;
---

<a
  class:list={[
    'px-4 py-2 rounded-[5px] text-sm lg:text-base border transition-colors',
    !outline &&
      type === 'primary' &&
      'bg-primary-500 text-white hover:bg-primary-600',
    !outline &&
      type === 'secondary' &&
      'bg-secondary-500 text-white hover:bg-secondary-600',
    outline && 'bg-transparent',
    outline &&
      type === 'primary' &&
      '!text-primary-500 border-primary-500 hover:bg-primary-500 hover:text-white',
    outline &&
      type === 'secondary' &&
      'text-secondary-500 border-secondary-500 hover:bg-secondary-500 hover:text-white',
  ]}
  href={href}>{text}</a
>

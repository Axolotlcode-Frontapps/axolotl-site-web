---
import Background from '@/assets/icons/services/background.astro';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  icon: ImageMetadata;
}

const { title, description, icon } = Astro.props;
---

<article class="p-8 rounded-lg shadow-lg relative w-full">
  <div class="flex items-start gap-6 backdrop-blur-lg relative z-10">
    <Image src={icon} alt={title} />
    <div>
      <span class="text-xl xl:text-2xl leading-6 xl:leading-7 font-bold"
        >{title}</span
      >
      <p class="text-sm xl:text-base leading-[26px] xl:leading-7 mt-6">
        {description}
      </p>
    </div>
  </div>
  <Background />
</article>

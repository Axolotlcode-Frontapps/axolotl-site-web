---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  alt: string;
  icon: ImageMetadata;
}

const { title, description, icon, alt } = Astro.props as Props;
---

<article
  class="bg-white p-8 rounded-lg shadow-md hover:-translate-y-1 transition-all duration-500 flex flex-col items-center xl:gap-6 xs:gap-2 md:gap-4 lg:gap-5"
>
  <Image src={icon} alt={alt} />
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 text-center">{description}</p>
</article>

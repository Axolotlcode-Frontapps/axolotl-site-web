---
import { getLangFromUrl, useTranslations } from '@/libs/i18n/utils';
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/shared/hero.astro';
import HeroBg from '@/assets/images/portfolio/hero-cover.jpg';
import Projects from '@/components/portfolio/projects.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const hero = {
  title: t('portfolio.hero.title'),
  description: t('portfolio.hero.description'),
  image: HeroBg,
};
---

<Layout title={t('portfolio.title-page')}>
  <Hero title={hero.title} description={hero.description} image={hero.image} />
  <Projects />
</Layout>

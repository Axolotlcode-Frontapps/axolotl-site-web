---
import { changeLanguage } from 'i18next';
import { getLangFromUrl, useTranslations } from '@/libs/i18n/utils';
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/shared/hero.astro';
import HeroBg from '@/assets/images/contact/contact-hero.webp';
import FAQs from '@/components/contact/faqs.astro';
import ContactSection from '@/components/contact/contact-section.astro';

changeLanguage('en');

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const hero = {
  title: t('contact.hero.title'),
  description: t('contact.hero.description'),
  image: HeroBg,
};
---

<Layout title={t('contact.title-page')}>
  <Hero title={hero.title} description={hero.description} image={hero.image} />
  <FAQs />
  <ContactSection />
</Layout>

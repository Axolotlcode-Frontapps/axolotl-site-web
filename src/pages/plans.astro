---
import { getLangFromUrl, useTranslations } from '@/libs/i18n/utils';
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/shared/hero.astro';
import Services from '@/components/plans/services.astro';
import PlansComponent from '@/components/plans/plans.astro';
import NextLevel from '@/components/shared/next-level.astro';
import HeroBg from '@/assets/images/plans/plans-hero.webp';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const hero = {
  title: t('plans.hero.title'),
  description: t('plans.hero.description'),
  image: HeroBg,
};
---

<Layout title={t('plans.title-page')}>
  <Hero title={hero.title} description={hero.description} image={hero.image} />
  <Services />
  <PlansComponent />
  <NextLevel />
</Layout>

---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from '@/libs/i18n/utils';
import Footer from '@/components/shared/footer.astro';
import { Header } from '@/components/shared/header';
import '@/styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

const isHomePage = Astro.routePattern === '/' || Astro.routePattern === '/en';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const menu = [
  { label: t('header.home'), link: translatePath('/') },
  {
    label: t('header.about-us'),
    link: translatePath('/about'),
  },
  {
    label: t('header.services'),
    link: translatePath('/plans'),
  },
  {
    label: t('header.contact'),
    link: translatePath('/contact'),
  },
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="/favicon-light.ico"
      rel="icon"
      media="(prefers-color-scheme: light)"
    />
    <link
      href="/favicon-dark.ico"
      rel="icon"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header menu={menu} {lang} {isHomePage} client:load />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer menu={menu} />
  </body>
</html>
